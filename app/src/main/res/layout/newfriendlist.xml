<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/bb_default_elevation">


    <Button
        android:id="@+id/new_friend_apply_text"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:padding="@dimen/bb_fake_shadow_height"
        android:textColor="@color/colorPrimary"
        tools:text="@string/apply_friend" />

    <TextView
        android:id="@+id/new_friend_name_text"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:padding="@dimen/bb_fake_shadow_height"
        android:paddingStart="10dp"
        android:textColor="@color/bb_darkBackgroundColor" />

    <TextView
        android:id="@+id/new_friend_gender_text"
        android:layout_width="10dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:padding="@dimen/bb_fake_shadow_height"
        android:textColor="@color/bb_darkBackgroundColor" />

    <TextView
        android:id="@+id/new_friend_nationality_text"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:padding="@dimen/bb_fake_shadow_height"
        android:textColor="@color/bb_darkBackgroundColor" />

    <Button
        android:id="@+id/new_friend_more_detail_text"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:padding="@dimen/bb_fake_shadow_height"
        android:text="@string/more_detail"
        android:textColor="@color/colorPrimary" />

</LinearLayout>