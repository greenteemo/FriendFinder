<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.search.SearchResult">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="0"
            android:background="?attr/colorPrimary"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    <TextView
        android:id="@+id/new_friend_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:padding="@dimen/bb_default_elevation"
        android:text="@string/found_no_new_friend"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="14sp" />

    <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="800dp" />


        <Button
            android:id="@+id/search_result_botton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_weight="0"
            android:text="@string/search_result_button" />


</LinearLayout>